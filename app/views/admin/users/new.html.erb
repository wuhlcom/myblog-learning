<% provide(:title, "Sign Up") %>
<div class="blog-header">
	<h1 class="blog-title">Sign Up</h1>
</div>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_for(@user,url:admin_sign_up_path) do |f| %>
	<div class="form-group">
		<label for="user_email">Email address</lable>
		<%= f.email_field :email,class: "form-control",placeholder:"Email" %>
	</div>
	<div class="form-group">
		<label for="user_nickname">Nickname</label>
		<%= f.text_field :nickname,class: "form-control",placeholder:"Nickname" %>
	</div>
	<div class="form-group">
		<label for="user_password">Password</label>
		<%= f.password_field :password,class:"form-control", placeholder:"Password"%>
	</div>
	<div class="form-group">
		<label for="user_password_confirmation">Password confirmation</label>
		<%= f.password_field :password_confirmation,class:"form-control", placeholder:"Password confirmation"%>
	</div>
	<%= f.submit "Sign Up",class:"btn btn-default"%>
<% end %>
</div>
</div>
